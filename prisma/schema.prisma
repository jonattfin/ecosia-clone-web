datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id    String @id @default(cuid())
  name  String
  scope String
  image String
  desc  String
  tags  Tag[]
}

model Tag {
  id        String   @id @default(cuid())
  image     String
  title     String
  subtitle  String
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}
